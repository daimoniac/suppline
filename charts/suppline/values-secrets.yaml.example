# Secret values - DO NOT COMMIT TO GIT
# Add this file to .gitignore
#
# Copy this file to values-secrets.yaml and fill in your actual secrets:
#   cp charts/suppline/values-secrets.yaml.example charts/suppline/values-secrets.yaml
#
# Then edit values-secrets.yaml with your actual values.

backend:
  secrets:
    # API key for authentication
    SUPPLINE_API_KEY: "your-api-key-here"
    
    # Cosign attestation key (base64 encoded)
    # Generate with: base64 -w0 < cosign.key
    ATTESTATION_KEY: "LS0tLS1CRUdJTi4uLg=="
    
    # Cosign key password
    ATTESTATION_KEY_PASSWORD: "your-cosign-password"
    
    # Docker registry credentials
    DOCKER_USERNAME: "your-docker-username"
    DOCKER_PASSWORD: "your-docker-password-or-token"

    # Private registry credentials
    # These are used for the self-contained Docker registry when registry.enabled=true
    SUPPLINE_REGISTRY_USERNAME: "suppline"
    SUPPLINE_REGISTRY_PASSWORD: "replaceme"

